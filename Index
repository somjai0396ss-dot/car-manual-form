<body>

  <div class="container">
    <h2>Download คู่มือรถ</h2>
    <p class="sub-head">กรุณากรอกข้อมูลก่อนดาวน์โหลดคู่มือ</p>

    <form id="downloadForm" onsubmit="handleFormSubmit(event)">
      <input type="hidden" id="model" name="model" value="<?= model ?>">

      <label for="name">ชื่อ – นามสกุล</label>
      <input type="text" id="name" name="name" placeholder="Your name" required>

      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="you@email.com" required>

      <label for="phone">เบอร์โทรศัพท์</label>
      <input type="tel" id="phone" name="phone" placeholder="08x-xxx-xxxx" required>

      <div class="checkbox-container">
        <input type="checkbox" id="consent" required>
        <span>ฉันยินยอมให้บริษัทติดต่อกลับ และยอมรับนโยบายความเป็นส่วนตัว</span>
      </div>

      <button type="submit" id="btnSubmit">ดาวน์โหลดคู่มือ &rarr;</button>
    </form>
    
    <div class="footer">ข้อมูลของคุณจะถูกเก็บเป็นความลับ</div>
  </div>

  <script>
    function handleFormSubmit(event) {
      event.preventDefault(); // ป้องกันหน้าเว็บรีโหลด
      
      var btn = document.getElementById('btnSubmit');
      btn.innerHTML = "กำลังบันทึกข้อมูล...";
      btn.disabled = true;

      var model = document.getElementById('model').value;

      // ส่งข้อมูลไปที่ Code.gs
      google.script.run
        .withSuccessHandler(function(response) {
          // ถ้าสำเร็จ ให้ไปเปิดหน้า PDF
          redirectToPDF(model);
        })
        .withFailureHandler(function(error) {
          alert("เกิดข้อผิดพลาด: " + error);
          btn.innerHTML = "ลองใหม่อีกครั้ง";
          btn.disabled = false;
        })
        .processForm(document.getElementById('downloadForm'));
    }

    function redirectToPDF(modelCode) {
      // รายชื่อลิงก์ PDF ตามรุ่น (จากข้อมูลที่คุณให้มา)
      var pdfLinks = {
        "Nexi": "https://drive.google.com/file/d/176BzRWMbCgFNKiYgHfF5VW_BF6zIFrH0/view?usp=sharing",
        "Vink": "https://drive.google.com/file/d/1EM_RBW6XqpOVycDKMduTkfH07nUetLyd/view?usp=sharing",
        "Ren": "https://drive.google.com/file/d/1dP6zPRT1nRkPkRCBRMm6A9zNOn7d5vwd/view?usp=sharing",
        "Ying": "https://drive.google.com/file/d/1A4D91rJCbVpAd8pr958xXRDGgFJcte1e/view?usp=sharing",
        "Mew": "https://drive.google.com/file/d/1gA5igltOxVCULbjot_UplMj9GSq4Z2JG/view?usp=sharing",
        "Slice": "https://drive.google.com/file/d/1FUXx2l15O9lqrLO9_oxq-nd5j_vrDENI/view?usp=sharing"
      };

      // หา URL แบบไม่สนใจตัวพิมพ์เล็ก/ใหญ่
      var targetUrl = "";
      if(modelCode) {
        for (var key in pdfLinks) {
          if (key.toLowerCase() === modelCode.trim().toLowerCase()) {
            targetUrl = pdfLinks[key];
            break;
          }
        }
      }

      if (targetUrl) {
        // เปลี่ยนหน้าไปที่ PDF
        window.location.href = targetUrl;
      } else {
        alert("ไม่พบลิงก์ดาวน์โหลดสำหรับรุ่น: " + (modelCode || "ไม่ระบุ") + "\nกรุณาตรวจสอบลิงก์อีกครั้ง");
        // คืนค่าปุ่มให้กดใหม่ได้
        var btn = document.getElementById('btnSubmit');
        btn.innerHTML = "ดาวน์โหลดคู่มือ &rarr;";
        btn.disabled = false;
      }
    }
  </script>

</body>
